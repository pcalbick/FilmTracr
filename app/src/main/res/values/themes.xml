<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FilmTracr" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/my_orange</item>
        <item name="colorPrimaryVariant">@color/my_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/my_gold</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.FilmTracr.Background">
        <item name="android:background">@color/my_light_gray</item>
    </style>

    <style name="Theme.FilmTracr.Swipe">
        <item name="android:background">@color/my_light_orange</item>
    </style>

    <style name="Theme.FilmTracr.Edit">
        <item name="android:src">@drawable/ic_edit</item>
    </style>

    <style name="Theme.FilmTracr.Delete">
        <item name="android:src">@drawable/ic_delete</item>
    </style>

    <style name="Theme.FilmTracr.Arrow">
        <item name="android:src">@drawable/ic_arrow</item>
    </style>

    <style name="Theme.FilmTracr.Text">
        <item name="android:textColor">@color/my_med_gray</item>
    </style>

    <style name="Theme.FilmTracr.EmptyItem">
        <item name="android:background">@color/my_light_gray</item>
        <item name="android:textColor">@color/my_med_gray</item>
    </style>

    <style name="Theme.FilmTracr.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FilmTracr.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FilmTracr.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>