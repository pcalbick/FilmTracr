<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.peternc.filmtracr">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FilmTracr">
        <activity android:name=".SettingsActivity"/>
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ReviewActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.FilmTracr.NoActionBar"/>
        <activity
            android:name=".CreateReviewActivity"
            android:label="Create Review"
            android:parentActivityName=".ReviewActivity" />
        <activity
            android:name=".ViewReviewActivity"
            android:label="Review"
            android:parentActivityName=".ReviewActivity" />
    </application>

</manifest>